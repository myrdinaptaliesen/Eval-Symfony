{% extends 'base.html.twig' %}

{% block title %}Liste des produits{% endblock %}

{% block body %}
<div class="content">
    {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
    <div class="container">
    <h1>Liste des produits</h1>

    <a href="{{ path('products_new') }}" class="btn btn-primary floatR">Créer un nouveau produit</a>

    <table class="table" id="myTable">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom du produit</th>
                <th>Prix</th>
                <th>Stock</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.nameProduct }}</td>
                <td>{{ product.priceProduct }}</td>
                <td>{{ product.stockProduct }}</td>
                <td>
                    <a href="{{ path('products_show', {'id': product.id}) }}">Voir</a>
                    <a href="{{ path('products_edit', {'id': product.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('products_new') }}" class="btn btn-primary floatR">Créer un nouveau produit</a>

    </div>
    </div>
{% endblock %}


